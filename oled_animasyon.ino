void setup() {
  Serial.begin(9600);
  if (!ekran.begin(SSD1306_128X64))while(1); 
 
}
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
///////////////////////////////////////////////////////////////////////////////////////////////////////       loop      ////////////////////////////////////////////////////////
