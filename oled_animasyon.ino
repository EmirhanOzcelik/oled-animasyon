void loop() {
byte x = map(analogRead(joy_x),0,1023,0,5);

if(x < 2 || x > 2){
 if(anim_sayac == 3){ anim_sayac = 0;}else{anim_sayac++;} animasyon_kontrol(); delay(100);
}

}
void animasyon_kontrol()
{
  ekran.clrScr();
  if(anim_sayac == 0){ ekran.drawBitmap(42+d1, d2, kedi_anim1, 42, 34); }
    else if(anim_sayac == 1){ ekran.drawBitmap(39+d1, d2, kedi_anim2, 39, 37); }
      else if(anim_sayac == 2){ ekran.drawBitmap(31+d1, d2, kedi_anim3, 31, 39); }
        else if(anim_sayac == 3){ ekran.drawBitmap(37+d1, d2, kedi_anim4, 37, 32); }
        ekran.update();
}